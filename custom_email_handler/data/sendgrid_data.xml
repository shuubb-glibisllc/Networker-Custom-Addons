<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- SendGrid Configuration Data -->
        
        <!-- Default SendGrid API Endpoint -->
        <record id="sendgrid_api_endpoint" model="ir.config_parameter">
            <field name="key">sendgrid.api.endpoint</field>
            <field name="value">https://api.sendgrid.com/v3/mail/send</field>
        </record>
        
        <!-- Default SendGrid Webhook Endpoint -->
        <record id="sendgrid_webhook_endpoint" model="ir.config_parameter">
            <field name="key">sendgrid.webhook.endpoint</field>
            <field name="value">/sendgrid/webhook</field>
        </record>
        
        <!-- SendGrid Event Types -->
        <record id="sendgrid_event_delivered" model="ir.config_parameter">
            <field name="key">sendgrid.events.track.delivered</field>
            <field name="value">True</field>
        </record>
        
        <record id="sendgrid_event_opened" model="ir.config_parameter">
            <field name="key">sendgrid.events.track.opened</field>
            <field name="value">True</field>
        </record>
        
        <record id="sendgrid_event_clicked" model="ir.config_parameter">
            <field name="key">sendgrid.events.track.clicked</field>
            <field name="value">True</field>
        </record>
        
        <record id="sendgrid_event_bounced" model="ir.config_parameter">
            <field name="key">sendgrid.events.track.bounced</field>
            <field name="value">True</field>
        </record>
        
        <record id="sendgrid_event_dropped" model="ir.config_parameter">
            <field name="key">sendgrid.events.track.dropped</field>
            <field name="value">True</field>
        </record>
        
    </data>
</odoo>
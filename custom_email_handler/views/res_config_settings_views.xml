<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.sendgrid</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form" position="inside">
        <app string="SendGrid Connector" data-string="SendGrid Connector" name="sendgrid_connector">
          <block title="SendGrid Configuration" name="sendgrid_service">
            <setting string="Use SendGrid instead of SMTP for email delivery" id="use_sendgrid_service_setting">
              <field name="use_sendgrid_service"/>
              <div class="content-group" invisible="not use_sendgrid_service">
                <div class="mt16">
                  <field name="sendgrid_config_id" class="o_light_label"/>
                </div>
              </div>
            </setting>
          </block>
        </app>
      </xpath>
    </field>
  </record>
</odoo>

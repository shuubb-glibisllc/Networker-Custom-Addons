<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sendgrid_config_list" model="ir.ui.view">
        <field name="name">sendgrid.config.list</field>
        <field name="model">sendgrid.config</field>
        <field name="arch" type="xml">
            <list string="SendGrid Configurations">
                <field name="name"/>
                <field name="sender_email"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    
    <record id="view_sendgrid_config_form" model="ir.ui.view">
        <field name="name">sendgrid.config.form</field>
        <field name="model">sendgrid.config</field>
        <field name="arch" type="xml">
            <form string="SendGrid Configuration">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="sender_email"/>
                            <field name="sender_name"/>
                        </group>
                    </group>
                    <group>
                        <field name="api_key" password="True"/>
                        <field name="api_url" placeholder="https://api.sendgrid.com (default) or https://api.eu.sendgrid.com (EU)"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_sendgrid_config" model="ir.actions.act_window">
        <field name="name">SendGrid Configurations</field>
        <field name="res_model">sendgrid.config</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <menuitem id="menu_sendgrid_config" 
              name="SendGrid Configurations" 
              parent="base.menu_administration"
              action="action_sendgrid_config"/>
</odoo>

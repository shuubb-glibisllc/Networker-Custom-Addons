<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- SendGrid Configuration Views -->
    
    <!-- SendGrid Config Form View -->
    <record id="view_sendgrid_config_form" model="ir.ui.view">
        <field name="name">sendgrid.config.form</field>
        <field name="model">sendgrid.config</field>
        <field name="arch" type="xml">
            <form string="SendGrid Configuration">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="api_key" password="True"/>
                            <field name="from_email"/>
                            <field name="from_name"/>
                        </group>
                        <group>
                            <field name="webhook_enabled"/>
                            <field name="webhook_url" readonly="1"/>
                            <field name="track_opens"/>
                            <field name="track_clicks"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Advanced Settings">
                            <group>
                                <field name="sandbox_mode"/>
                                <field name="retry_attempts"/>
                                <field name="timeout"/>
                            </group>
                        </page>
                        <page string="Event Tracking">
                            <group>
                                <field name="track_delivered"/>
                                <field name="track_bounced"/>
                                <field name="track_dropped"/>
                                <field name="track_spam_reports"/>
                                <field name="track_unsubscribes"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- SendGrid Config Tree View -->
    <record id="view_sendgrid_config_tree" model="ir.ui.view">
        <field name="name">sendgrid.config.tree</field>
        <field name="model">sendgrid.config</field>
        <field name="arch" type="xml">
            <tree string="SendGrid Configurations">
                <field name="name"/>
                <field name="from_email"/>
                <field name="webhook_enabled"/>
                <field name="sandbox_mode"/>
            </tree>
        </field>
    </record>
    
    <!-- SendGrid Config Action -->
    <record id="action_sendgrid_config" model="ir.actions.act_window">
        <field name="name">SendGrid Configuration</field>
        <field name="res_model">sendgrid.config</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_sendgrid_config_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure your SendGrid settings
            </p>
            <p>
                Set up your SendGrid API key and email configuration for reliable email delivery.
            </p>
        </field>
    </record>
    
    <!-- SendGrid Menu -->
    <menuitem id="menu_sendgrid_root" name="SendGrid" parent="base.menu_administration" sequence="100"/>
    <menuitem id="menu_sendgrid_config" name="Configuration" parent="menu_sendgrid_root" 
              action="action_sendgrid_config" sequence="10"/>
    
</odoo>
<odoo>
  <record id="view_res_partner_form_inherit_napr" model="ir.ui.view">
    <field name="name">res.partner.form.napr</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet//div[@class='oe_button_box']" position="inside">
        <button name="action_napr_fetch"
                type="object"
                string="Fetch NAPR"
                class="oe_stat_button"
                icon="fa-file"
                invisible="vat == False"/>
        <button name="action_fetch_legal_name"
                type="object"
                string="Fetch Legal Name"
                class="oe_stat_button"
                icon="fa-building"
                invisible="vat == False"/>
      </xpath>
    </field>
  </record>

</odoo>

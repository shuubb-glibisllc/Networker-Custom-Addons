<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Google Meet Meeting Views -->
    
    <!-- Tree View -->
    <record id="view_google_meet_tree" model="ir.ui.view">
        <field name="name">google.meet.meeting.tree</field>
        <field name="model">google.meet.meeting</field>
        <field name="arch" type="xml">
            <tree string="Google Meet Meetings">
                <field name="name"/>
                <field name="organizer_id"/>
                <field name="start_datetime"/>
                <field name="end_datetime"/>
                <field name="state"/>
                <field name="meet_url" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_google_meet_form" model="ir.ui.view">
        <field name="name">google.meet.meeting.form</field>
        <field name="model">google.meet.meeting</field>
        <field name="arch" type="xml">
            <form string="Google Meet Meeting">
                <header>
                    <button name="action_schedule_meeting" type="object" string="Schedule Meeting" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_join_meeting" type="object" string="Join Meeting" 
                            class="btn-success" invisible="not meet_url"/>
                    <button name="action_cancel_meeting" type="object" string="Cancel Meeting" 
                            invisible="state in ['cancelled', 'ended']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,scheduled,started,ended"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="organizer_id"/>
                            <field name="start_datetime"/>
                            <field name="end_datetime"/>
                        </group>
                        <group>
                            <field name="meet_url" readonly="1"/>
                            <field name="meet_id" readonly="1"/>
                            <field name="calendar_event_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Attendees">
                            <field name="attendee_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="phone" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_google_meet_search" model="ir.ui.view">
        <field name="name">google.meet.meeting.search</field>
        <field name="model">google.meet.meeting</field>
        <field name="arch" type="xml">
            <search string="Search Google Meet Meetings">
                <field name="name"/>
                <field name="organizer_id"/>
                <field name="attendee_ids"/>
                <filter string="My Meetings" name="my_meetings" 
                        domain="[('organizer_id', '=', uid)]"/>
                <filter string="Scheduled" name="scheduled" 
                        domain="[('state', '=', 'scheduled')]"/>
                <filter string="Today" name="today" 
                        domain="[('start_datetime', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))),
                                ('start_datetime', '&lt;', datetime.datetime.combine(context_today() + datetime.timedelta(days=1), datetime.time(0,0,0)))]"/>
                <group expand="0" string="Group By">
                    <filter string="Organizer" name="group_organizer" context="{'group_by': 'organizer_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'start_datetime:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_google_meet" model="ir.actions.act_window">
        <field name="name">Google Meet Meetings</field>
        <field name="res_model">google.meet.meeting</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_google_meet_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Google Meet meeting
            </p>
            <p>
                Schedule and manage Google Meet meetings directly from Odoo.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_google_meet_root" name="Google Meet" sequence="100"/>
    <menuitem id="menu_google_meet_meetings" name="Meetings" parent="menu_google_meet_root" 
              action="action_google_meet" sequence="10"/>

</odoo>